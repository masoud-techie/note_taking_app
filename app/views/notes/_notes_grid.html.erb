<% if notes.present? && notes.any? %>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% notes.each do |note| %>
      <div class="col">
        <div class="card shadow-lg border-0">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <h5 class="fw-bold mb-1">
                <%= link_to note.title, note, class: "text-dark text-decoration-none" %>
              </h5>

              <% if note.favorite %>
                <i class="bi bi-star-fill text-saffron"></i>
              <% else %>
                <i class="bi bi-star text-saffron"></i>
              <% end %>
            </div>

            <p class="card-text text-muted small"><%= note.description %></p>

            <% if note.user != current_user %>
              <div class="pb-2">
                <span class="badge bg-green">
                  Shared by <%= note.user.email %>
                </span>
              </div>
            <% end %>
          </div>

          <div class="card-footer">
            <div class="d-flex gap-3">
              <div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="shareModalLabel">Share note with</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <%= form_with url: note_note_shares_path(note), local: true do |f| %>
                        <div class="input-group mb-3">
                          <%= text_field_tag :email, nil, placeholder: "User email", class: "form-control" %>
                          <button class="btn btn-outline-dark">Share</button>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>


            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">
                <% if note.updated_at > note.created_at %>
                  Updated: <%= note.updated_at.strftime("%b %d, %Y") %>
                <% else %>
                  Created on: <%= note.created_at.strftime("%b %d, %Y") %>
                <% end %>
              </small>

              <div class="d-flex gap-3 pt-3">
                <%= link_to edit_note_path(note),
                            class: " text-dark text-decoration-none" do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <p type="" class="text-dark" data-bs-toggle="modal" data-bs-target="#shareModal">
                  <i class="bi bi-share"></i>
                </p>
                <%= button_to note_path(note),
                              method: :delete,
                              data: { confirm: "Delete this note?" },
                              class: "btn btn-link text-danger p-0" do %>
                  <i class="bi bi-trash"></i>
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<% end %>
