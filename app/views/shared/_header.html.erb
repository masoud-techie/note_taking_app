<header class="navbar navbar-dark bg-dark mb-4">
  <div class="container">
    <% if user_signed_in? %>
      <a class="navbar-brand" href="<%= notes_path %>">NotesApp</a>
    <% else %>
      <a class="navbar-brand" href="<%= root_path %>">NotesApp</a>
    <% end %>
    <% if user_signed_in? %>
      <div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger btn-sm" %>
      </div>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-light btn-sm" %>
    <% end %>
  </div>
</header>